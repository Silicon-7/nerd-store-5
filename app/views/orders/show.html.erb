<h1>Your Order</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="thumbnail">
      <h2>Order Id: <%= "56724300#{@order.id}" %></h2>
      <h2>Email: <%= @order.user.email %></h2>

      <% @order.carted_products.each do |carted_product| %>
        <h4><%= carted_product.product.name %> - <%= number_to_currency(carted_product.product.price) %> x <%= carted_product.quantity %></h4>
      <% end %>
      
      <h3>Subtotal: <%= number_to_currency(@order.subtotal) %></h3>
      <h3>Tax: <%= number_to_currency(@order.tax) %></h3>
      <h2>Total: <%= number_to_currency(@order.total) %></h2>
    </div>
  </div>
</div>